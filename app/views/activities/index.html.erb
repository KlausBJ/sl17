<p id="notice"><%= notice %></p>

<h1>Aktiviteter</h1>

<table>
  <thead>
    <tr>
      <th>Navn</th>
      <th>Start</th>
      <th>Slut</th>
      <th>Tovholder</th>
			<th>Sted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.starttime %></td>
        <td><%= activity.endtime %></td>
        <td><%= activity.person.name %></td>
				<td><%= activity.place.name %></td>
        <td><%= link_to 'Vis', activity %></td>
        <td><%= link_to 'Rediger', edit_activity_path(activity) %></td>
        <td><%= link_to 'Slet', activity, method: :delete, data: { confirm: 'Er du sikker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
<h3>Import a CSV File</h3>
  <%= form_tag import_activities_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>
<br>

<%= link_to 'Ny Aktivitet', new_activity_path %>
