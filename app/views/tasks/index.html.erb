<p id='notice'><%= notice %></p>

<h1>Opgaver</h1>

<table>
  <thead>
    <tr>
      <th>Navn</th>
      <th>Beskrivelse</th>
      <th>Aktivitet</th>
      <th>Antal</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.activity.name %></td>
        <td><%= task.number %></td>
        <td><%= link_to 'Vis', task %></td>
        <td><%= link_to 'Rediger', edit_task_path(task) %></td>
        <td><%= link_to 'Slet', task, method: :delete, data: { confirm: 'Er du sikker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
<h3>Import a CSV File</h3>
  <%= form_tag import_tasks_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag 'Import CSV' %>
  <% end %>
</div>

<%= link_to 'Ny Opgave', new_task_path %>
