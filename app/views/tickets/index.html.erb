<p id='notice'><%= notice %></p>

<h1>Billetter</h1>

<table>
  <thead>
    <tr>
      <th>Deltager</th>
      <th>Aktivitet</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.person.name %>, <%= ticket.person.member.number %></td>
        <td><%= ticket.activity.name %></td>
        <td><%= link_to 'Vis', ticket %></td>
        <td><%= link_to 'Rediger', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Slet', ticket, method: :delete, data: { confirm: 'Er du sikker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ny Billet', new_ticket_path %>
